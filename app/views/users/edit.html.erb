<!-- container-fluid → 可変幅のコンテナ(ウィンドウサイズを変えても常に画面いっぱいに広がる -->
<div class='container-fluid'>
  <div class='row'>

　　<!-- サブメニュー -->
  	<div class='col-3'>
      <%= render 'posts/sidemenu' %>
  	</div>
　  <!-- 投稿ボタン -->
    <%= render 'posts/modal', posts:Post.new %>

    <div class='col-6 main'>
      <div class="row pt-3">
      	<div class='col-12 text-center'>
      	  <h2>ユーザー編集</h2>
      	</div>
      </div>
      <%= form_with model: @user, url:user_path(@user), method: :patch,  local: true do |f| %>
        <div class="row pt-3">
          <div class='col-12 text-center'>
            <%= f.attachment_field :profile_image %>
          </div>
        </div>
        <div class="row pt-5">
          <div class='col-5 text-right'>
	        <%= f.label :name %>
	      </div>
	      <div class='col-5'>
			<%= f.text_field :name %>
		  </div>
        </div>
        <div class="row pt-4">
          <div class='col-5 text-right'>
            <%= f.label :email %>
          </div>
          <div class='col-5'>
		    <%= f.text_field :email %>
		  </div>
        </div>
        <div class="row pt-4">
          <div class='col-5 text-right'>
            <%= f.label :password %>
          </div>
          <div class='col-5'>
		    <%= f.password_field :password %>
		  </div>
        </div>
        <div class="row pt-4">
          <div class='col-5 text-right'>
            <%= f.label :password_confirmation %>
          </div>
          <div class='col-5'>
		    <%= f.password_field :password_confirmation %>
		  </div>
        </div>
        <div class="row pt-4">
          <div class='col-12 text-center'>
            <%= f.submit "保存", class: "btn btn-primary"  %>
          </div>
        </div>
	  <% end %>
    </div>

  </div>
</div>
