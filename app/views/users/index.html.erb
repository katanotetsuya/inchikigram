<!-- container-fluid → 可変幅のコンテナ(ウィンドウサイズを変えても常に画面いっぱいに広がる -->
<div class='container-fluid'>
  <div class='row'>

　　<!-- サブメニュー -->
  	<div class='col-3'>
      <%= render 'posts/sidemenu' %>
  	</div>
　  <!-- 投稿ボタン -->
    <%= render 'posts/modal', post:Post.new %>

　　<!-- メイン画面 -->
  	<div class='col-5 users-main'>
  	  <div class='row p-2'>
        <div class='col-12 text-center'>
          <h2>ユーザー(一覧)</h2>
        </div>
      </div>
  	  <% @users.each do |user| %>
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image.jpg", size: "50x50", class: "rounded-circle" %>
          </div>
          <div class="col-2">
  	  	    <%= user.name %>
  	  	  </div>
          <div class="col-4">
            <div id="follow_form_<%= user.id %>">
            　<%= render "follow_form", user:user %>
            </div>
          </div>
  	  	  <div class="col-2">
          　<% if current_user != user.id %>
　　　　　　　  <%= link_to chat_path(user.id) do %>
                <i class="far fa-comment fa-lg"></i>
              <% end %>
　　　　　　　<% end %>
          </div>
  	    </div>
  	  <% end %>
    </div>

  </div>
</div>

