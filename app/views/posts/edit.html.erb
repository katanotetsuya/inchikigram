<!-- container-fluid → 可変幅のコンテナ(ウィンドウサイズを変えても常に画面いっぱいに広がる -->
<div class='container-fluid'>
  <div class='row'>

　　<!-- サブメニュー -->
  	<div class='col-3'>
      <%= render 'posts/sidemenu' %>
  	</div>
　  <!-- 投稿ボタン -->
    <%= render 'posts/modal', posts:Post.new %>

    <div class='col-6 main'>
      <div class="row pt-3">
      	<div class='col-12 text-center'>
      	  <h2>投稿編集</h2>
      	</div>
      </div>
      <%= form_with model: @post, url:post_path(@post), method: :patch,  local: true do |f| %>
        <div class="row pt-3">
          <div id="preview"></div>
          <div class='col-12 text-center'>
            <%= f.attachment_field :image, onchange: "imgPreView(event)" %>
          </div>
        </div>
        <div class="row pt-5">
          <div class='col-5 text-right'>
	          <%= f.label '投稿コメント' %>
	        </div>
	        <div class='col-5'>
			      <%= f.text_area :post_comment %>
		      </div>
        </div>
        <div class="row pt-4">
          <div class='col-12 text-center'>
            <%= f.submit "保存", class: "btn btn-primary"  %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>